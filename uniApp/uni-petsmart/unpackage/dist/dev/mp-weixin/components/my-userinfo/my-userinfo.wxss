.my-userinfo-container {
  height: 100%;
  background-color: #F4F4F4;
}
.my-userinfo-container .top-box {
  height: 400rpx;
  background-color: #FD6E91;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.my-userinfo-container .top-box .avatar {
  width: 90px;
  height: 90px;
  border-radius: 45px;
  border: 2px solid #FFF;
  box-shadow: 0 1px 5px black;
}
.my-userinfo-container .top-box .nickname {
  font-size: 16px;
  color: #FFF;
  font-weight: bold;
  margin-top: 10px;
}
.panel-list {
  padding: 0 10px;
  position: relative;
  top: 10px;
}
.panel-list .panel {
  background-color: white;
  border-radius: 3px;
  margin-bottom: 8px;
}
.panel-list .panel .panel-list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 15px;
  padding: 0 10px;
  line-height: 50px;
  border-bottom: 1px solid #F4F4F4;
}

